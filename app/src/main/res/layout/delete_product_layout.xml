<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <TextView
        android:id="@+id/text_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/gold"
        android:textStyle="bold"
        android:text="@string/remove_wishlist_item"/>

    <TextView
        android:id="@+id/text_msg_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_id"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:text="@string/remove_wishlist_item"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_btn_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_msg_id"
        app:layout_constraintEnd_toStartOf="@id/cancel_btn_id"
        android:textAllCaps="false"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_btn_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_msg_id"
        app:layout_constraintStart_toEndOf="@id/delete_btn_id"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:text="@string/cancel"
        android:textColor="@color/white"
        />

    <ProgressBar
        android:id="@+id/progress_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
/>

</androidx.constraintlayout.widget.ConstraintLayout>